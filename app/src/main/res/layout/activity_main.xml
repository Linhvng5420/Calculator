<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_textview"
        android:gravity="center_vertical|right"
        android:padding="10dp"
        android:text="0"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/border_textview"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                style="@style/MyStyleButton"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/MyStyleButton"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/MyStyleButton"
                android:text="3" />

            <Button
                android:id="@+id/btn_cong"
                style="@style/MyStyleButton"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                style="@style/MyStyleButton"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/MyStyleButton"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/MyStyleButton"
                android:text="6" />

            <Button
                android:id="@+id/btn_tru"
                style="@style/MyStyleButton"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                style="@style/MyStyleButton"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/MyStyleButton"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/MyStyleButton"
                android:text="9" />

            <Button
                android:id="@+id/btn_nhan"
                style="@style/MyStyleButton"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_0"
                style="@style/MyStyleButton"
                android:text="0" />

            <Button
                android:id="@+id/btn_c"
                style="@style/MyStyleButton"
                android:text="C" />

            <Button
                android:id="@+id/btn_bang"
                style="@style/MyStyleButton"
                android:text="=" />

            <Button
                android:id="@+id/btn_chia"
                style="@style/MyStyleButton"
                android:text="/" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>